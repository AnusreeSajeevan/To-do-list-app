<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/task_height"
    android:padding="@dimen/margin10">
    <TextView
        android:id="@+id/txt_task_description"
        android:layout_marginRight="@dimen/task_name_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_task_priority"
        android:background="@drawable/circle_priority"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/task_priority_size"
        android:layout_height="@dimen/task_priority_size" />
</RelativeLayout>